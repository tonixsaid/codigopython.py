import tkinter as tk
def sumar():
    num1 = float(entrada.get())
    num2 = float(entrada2.get())
    resultado = num1 + num2
    resultado_res.config(text=f"Resultado: {resultado}")
ventana = tk.Tk()
ventana.geometry("300x200")
ventana.title("Calculadora de Suma")
etiqueta1 = tk.Label(ventana, text="Número 1:")
etiqueta1.pack()
entrada = tk.Entry(ventana)
entrada.pack()
etiqueta2 = tk.Label(ventana, text="Número 2:")
etiqueta2.pack()
entrada2= tk.Entry(ventana)
entrada2.pack()
boton_sumar = tk.Button(ventana, text="Sumar", command=sumar)
boton_sumar.pack()
resultado_res = tk.Label(ventana, text="Resultado:")
resultado_res.pack()
autor_etiqueta = tk.Label(ventana, text="Said Emir Tonix  ")
autor_etiqueta.pack()
ventana.mainloop()
